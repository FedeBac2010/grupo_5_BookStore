<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Include Head con CSS -->
    <%- include("../partials/head") %>

    <!-- Titulo -->
    <title>Product Details</title>
  </head>
  <body>
    <%- include("../partials/header") %>

    <!--Barra de navegacion celular-->
    <%- include("../partials/bottomNav") %>

    <!-- CONTENEDOR TOTAL -->

    <div class="contenedor-total">
      <div class="card">
        <% for( let index = 0; index < books.image.length; index++ ) { %>
        <div class="imgBox">
          <img src="/img/uploads/<%=books.image[index] %>" />
        </div>
        <% } %>
        <div class="details">
          <div class="title">
            <h3>
              <%= books.title ?? " " %> <br />
              
              <small>Genero: <%= category.name %> </small>
            </h3>
          </div>
          <div class="autor">
            <span>Autor: <%= books.author %> </span>
          </div>
          <div class="description">
            <h4>Descripcion:</h4>
            <br />
            <p><%= books.description %></p>
          </div>
          <div class="buy">
            <div class="price">
              <span><%= books.currency %> <%= books.price %> </span>
            </div>
            <div class="button">
              <a href="/products/cart">Agregar al Carrito</a>
            </div>
            <form
              action="/products/<%= books.id %>?_method=DELETE"
              method="post"
            >
              <button type="submit" class="button">Eliminar</button>
            </form>
            <a href="../edit/<%= books.id  %> "
              ><button type="submit" class="button">Editar</button></a
            >
          </div>
        </div>
      </div>
    </div>
    <!-- FOOTER -->

    <%- include("../partials/footer") %>
  </body>
</html>
